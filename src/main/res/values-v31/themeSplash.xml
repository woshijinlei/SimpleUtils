<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CommonSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>

        <!--如果不设置会从android:windowBackground中计算得到-->
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>

        <!--App icon with an icon background: This should be 240×240 dp, and fit within a circle of 160 dp in diameter.-->
        <!--App icon without an icon background: This should be 288×288 dp, and fit within a circle of 192 dp in diameter.-->
        <!--可以设置和windowSplashScreenBackground一样颜色，就是全屏一致-->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_screen_animated_app_icon</item>

        <!--需要设置，否则动画不执行-->
        <item name="android:windowSplashScreenAnimationDuration">1000</item>

        <!--<item name="android:windowSplashScreenIconBackgroundColor">@android:color/holo_purple</item>-->

        <!--Branded image: This should be 200×80 dp-->
        <!--若果不提供这个比例的image，效果会变形-->
        <item name="android:windowSplashScreenBrandingImage">@drawable/splash_screen_brand</item>
    </style>
</resources>